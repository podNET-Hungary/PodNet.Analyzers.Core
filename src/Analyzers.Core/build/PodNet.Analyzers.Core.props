<Project>
	
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<IsRoslynComponent>true</IsRoslynComponent>
		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>

		<IncludeSymbols>false</IncludeSymbols>
		<IncludeBuildOutput>false</IncludeBuildOutput>

		<PodNetIncludeAnalyzer>true</PodNetIncludeAnalyzer>
		<PodNetIncludeAnalyzerCore>true</PodNetIncludeAnalyzerCore>
		<PodNetIncludeAnalyzerSymbols>true</PodNetIncludeAnalyzerSymbols>
		<PodNetIncludeLibPlaceholder>true</PodNetIncludeLibPlaceholder>
	</PropertyGroup>

	<ItemGroup>
		<TfmSpecificPackageFile Condition="'$(PodNetIncludeAnalyzer)' == 'true'" Include="$(OutputPath)*.dll" PackagePath="analyzers/dotnet/cs" />
		<TfmSpecificPackageFile Condition="'$(PodNetIncludeAnalyzerCore)' == 'true'" Include="$(MSBuildThisFileDirectory)../lib/netstandard2.0/*.dll" PackagePath="analyzers/dotnet/cs" />
		<TfmSpecificPackageFile Condition="'$(PodNetIncludeAnalyzerSymbols)' == 'true'" Include="$(OutputPath)*.pdb" PackagePath="analyzers/dotnet/cs" />
		<TfmSpecificPackageFile Condition="'$(PodNetIncludeLibPlaceholder)' == 'true'" Include="$(MSBuildThisFileDirectory)_._" PackagePath="lib/netstandard2.0" />
	</ItemGroup>
	
</Project>